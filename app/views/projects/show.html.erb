<p>
  <strong>Name:</strong>
  <%= @project.name %>
</p>
<p>
  <strong>Technologies used:</strong>
  <%= @project.technologies_used %>
</p>
<p>
  <strong>Description:</strong>
  <%= @project.description %>
</p>
<p>
  <strong>Link:</strong>
  <a href="<%= @project.link %>"><%= @project.link %></a>
</p>


<p id="approved comments">
  <%= render "comments/approved" %>
</p>

<p id="new comment">
  <%= render "comments/form" %>
</p>


<%= link_to 'Back', projects_path %>
<%= link_to 'Edit', edit_project_path(@project) if policy(@project).project? %>
<%= link_to 'Destroy', project_path(@project), method: :delete, data: { confirm: 'Are you sure?' } if policy(@project).project? %>
